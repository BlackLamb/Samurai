<?xml version="1.0" encoding="utf-8" ?>
<Window Size="100%">
  <Image src="Textures\samurai_background_notext.png" Size="100%" />
  <StackPanel Position="15%" Size="85%">
    <TextBlock Font="MenuFont.spritefont" Color="#000000" Format="{text}" Text="Game Name" />
    <TextBlock Name="txtGameName" Font="MenuFont.spritefont" Color="#000000" Format="{text}" Text="Tap here to enter game name" />
    <Button Name="btnCreate" Text="Create Game">
      <TextBlock Font="MenuFont.spritefont" Color="#000000" Format="{parenttext}" />
    </Button>
    <TextBlock Name="creatingMessage" Font="MenuFont.spritefont" Color="#000000" Format="{text}" Text="Creating Game..." Visibility="Enabled" />
  </StackPanel>
</Window>
