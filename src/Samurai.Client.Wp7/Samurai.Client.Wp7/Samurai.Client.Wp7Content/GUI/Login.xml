<?xml version="1.0" encoding="utf-8" ?>
<Window Size="100%">
  <StackPanel>
    <TextBlock Font="MenuFont.spritefont" Color="#FFFFFF" Text="Username" />
    <TextBlock Name="txtUsername" Font="MenuFont.spritefont" Color="#FFFFFF" Text="Tap here to enter your Username" />
    
    <TextBlock Font="MenuFont.spritefont" Color="#FFFFFF" Text="Password" />
    <TextBlock Name="txtPassword" Font="MenuFont.spritefont" Color="#FFFFFF" Text="Tap here to enter your password" />

    <Button Name="btnLogin" Text="Login">
      <TextBlock Font="MenuFont.spritefont" Color="#FFFFFF" Format="{parenttext}" />
    </Button>
  </StackPanel>
</Window>
